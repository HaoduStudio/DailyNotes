<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".cel_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MyScrollview"
        android:overScrollMode="never"
        android:background="#22C1BCBC">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/bg_clear_day"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_by_weather"
                    android:textColor="#FC5A5656"
                    android:textSize="11sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/city"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/city"
                    android:textColor="#FC5A5656"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/grassland"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/grassland"
                    android:textColor="#FC5A5656"
                    android:textSize="11sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/wave"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/wave"
                    android:textColor="#FC5A5656"
                    android:textSize="11sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/q_youyu"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/mascotyouyu"
                    android:textColor="#FC5A5656"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>