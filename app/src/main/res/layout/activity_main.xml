<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/startingwindow_bg"
        android:id="@+id/main_background">

        <ImageView
            android:id="@+id/weather_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/menuyinying"
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="6dp"
                android:src="@mipmap/yinying"
                android:scaleType="fitEnd"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/menu"
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="6dp"
                android:src="@mipmap/menu"
                android:scaleType="fitEnd"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/app_name"
                android:layout_marginStart="6dp"
                android:textColor="#FF9800"
                android:textSize="16dp"
                android:visibility="gone"/>



        </FrameLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_gravity="bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00FFFFFF"
                android:dividerHeight="5dp"
                android:scrollingCache="false"
                android:animationCache="false"
                android:visibility="gone"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/sharp_10dp"
        android:padding="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/write"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/write"/>
            <ImageView
                android:id="@+id/moodcalendar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/rili"/>
            <ImageView
                android:id="@+id/findda"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/find"/>
            <ImageView
                android:id="@+id/pifu"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/pifu"/>
            <ImageView
                android:id="@+id/setsafety"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/sets"/>
            <ImageView
                android:id="@+id/about"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="3dp"
                android:src="@mipmap/about"/>
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>