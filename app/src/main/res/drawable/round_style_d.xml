<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--手指未触摸-->
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <!--绘制 圆形-->
                <shape
                    android:shape="oval">
                    <!--填充颜色-->
                    <solid android:color="#FF0000"/>
                    <!--描边 白色 宽度1px-->
                    <padding
                        android:left="11dp"
                        android:top="11dp"
                        android:right="11dp"
                        android:bottom="11dp" />
                    <!--内容与该圆形的间距-->
                </shape>
            </item>
            <!--导入图片 -->
            <item android:drawable="@drawable/delete"/>
        </layer-list>
    </item>

    <!--手指触摸-->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="oval">
                    <!--填充颜色-->
                    <solid android:color="#CF0000"/>
                    <!--描边 白色 宽度1px-->
                    <padding
                        android:left="13dp"
                        android:top="13dp"
                        android:right="13dp"
                        android:bottom="13dp" />
                    <!--内容与该圆形的间距-->
                </shape>
            </item>
            <item android:drawable="@drawable/delete"/>
        </layer-list>
    </item>
</selector>