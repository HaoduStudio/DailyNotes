<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--手指未触摸-->
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <!--绘制 圆形-->
                <shape
                    android:shape="oval">
                    <!--填充颜色-->
                    <solid android:color="#CCFF6E63"/>
                    <!--描边 白色 宽度1px-->
                    <padding
                        android:left="7dp"
                        android:top="7dp"
                        android:right="7dp"
                        android:bottom="7dp" />
                </shape>
            </item>
            <!--导入图片 -->
            <item android:drawable="@drawable/mc_right"/>
        </layer-list>
    </item>

    <!--手指触摸-->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="oval">
                    <!--填充颜色-->
                    <solid android:color="#B2FB8080"/>
                    <!--描边 白色 宽度1px-->
                    <!--内容与该圆形的间距-->
                    <padding
                        android:left="7dp"
                        android:top="7dp"
                        android:right="7dp"
                        android:bottom="7dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/mc_right"/>
        </layer-list>
    </item>
</selector>